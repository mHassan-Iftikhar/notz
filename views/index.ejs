<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="main full min-h-screen bg-[#191919] text-white">
        <div class="form p-10">
            <form action="/create" method='post'>
                <input class="block px-5 py-2 bg-zinc-800 rounded-xl w-full outline-none" name="title" type="text" placeholder="Title">
                <textarea class="overflow-hidden block mt-2 px-5 py-2 bg-zinc-800 resize-none rounded-xl w-full outline-none" name="notes" placeholder="Write your task here!"></textarea>
                <input class="mt-2 rounded-xl bg-white px-5 py-2 text-black" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks p-10 flex gap-5 flex-wrap">
            <% if(files.length > 0) { %>
                <% files.forEach((val) => { %>
                    <div class="task min-w-72 px-3 py-4 rounded-xl bg-zinc-800">
                        <h1 class="text-2xl tracking-tighter"><%= val %></h1>
                        <div class="bar flex justify-between items-center mt-3">
                            <a class="text-green-600 inline-block" href="./files/<%= val %>">Read More.</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">edit</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-zinc-700">No task here!</div>
            <% } %>
        </div>
    </div>

    <script src="/javascripts/script.js"></script>
</body>
</html>